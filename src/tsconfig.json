{
  "compilerOptions": {
    "lib": [
      "ES2021.String"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "../dist",
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./**/*.spec.ts"
  ]
}